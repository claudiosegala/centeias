<%= form_for @topic do |f| %>
	<div class="form-field">
		<%= f.label :name %>
  		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-field">
		<%= f.label :description %>
  		<%= f.text_field :description, class: "form-control" %>
	</div>
	<br>
	<div class="form-field">
		<%= f.submit "Editar", class: "btn btn-primary" %>
	</div>
<% end %>