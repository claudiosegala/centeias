<div class="article-icons">
	<%= link_to edit_article_path(@article), class: "pencil-icon" do %>
		<i class="fa fa-pencil"></i>
	<% end %>
	&nbsp;&nbsp;&nbsp;
	<%= link_to article_path(@article), method: :delete, data: {confirm: "Essa operação é irreversível, tem certeza que deseja deletar?"}, class: "close-icon" do %>
		<i class="fa fa-close"></i>
	<% end %>
</div>
<h1><%= @article.name %></h1>

<br>
<b>Criado Por: </b><%= @user.name %>
<b>Descrição: </b><%= @article.description %>
<br>

<div class="markdown-text">
	<%= markdown(@article.text) %>
</div>

<br>
<div style="width: 100%;padding: 0px 20px 0px 20px;">
  <% @article.subarticles.each do |subarticle|%>
    <br />
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h5 class="card-title">
          <%= subarticle.name %>
        </h5>
        <p class="card-text">
          <%= textShow(subarticle.text) %>
        </p>
        <a href="#" class="card-link">
          <%= link_to "Acessar", subarticle_path(subarticle) %>
        </a>
      </div>
    </div>
  <% end %>
</div>