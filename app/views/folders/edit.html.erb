<h1>Editar Pasta</h1>
<hr />

<%= form_for @folder do |f| %>
	<div class="form-field">
		<%= f.label :name %>
  		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-field">
		<%= f.label :description %>
  		<%= f.text_area :description, class: "form-control" %>
	</div>
	<br>
	<div class="form-field">
		<%= f.submit "Salvar", class: "btn btn-primary" %>
	</div>
<% end %>
