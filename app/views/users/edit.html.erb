<%= form_for @user, url: update_user_path(@user), method: :patch do |f| %>
<div class="form-field">
  <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
</div>
	<div class="form-field">
		<%= f.label :password %>
			<%= f.password_field :password, class: "form-control" %>
	</div>
	<br>
	<div class="form-field">
		<%= f.submit "Create", class: "btn btn-primary" %>
	</div>
<% end %>
